{
    "name": "YouTube Short Redirector From Shorts to Clips",
    "version": "1.0",
    "description": "A simple Chrome extension to convert YouTube short URLs to the full video URLs and optionally auto-redirect.",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png",
            "256": "images/icon.png"
        }
    },
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}